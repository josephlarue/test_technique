  <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sticky Nav</title>
  <link rel="stylesheet" href="style-START.css">
</head>
<body>
  
  <header>
    <h1>Trello 2</h1>
  </header>

  <nav id="main">
    <ul>
      <li class="logo"><a href="#justepouruneastereggsijailetemps">ToDoList</a></li>
      <li><%= link_to 'Tasks', tasks_path %></li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://www.freelogodesign.org/file/app/client/thumb/0b25a727-186c-4785-bbfd-6a81870d1ca0_200x200.png?1609091925657", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link" %></li>
      <% end %>
    </ul>
  </nav>



<script>
  const nav = document.querySelector('#main');
  const topOfNav = nav.offsetTop;
  function fixNav() {
    if(window.scrollY >= topOfNav) {
      document.body.classList.add('fixed-nav');
      document.body.style.paddingTop = nav.offsetHeight + 'px';
    } else { 
      document.body.classList.remove('fixed-nav');
      document.body.style.paddingTop = 0;
      document.body.style.paddingBottom = 50;
    }
  }

  window.addEventListener('scroll', fixNav);
</script>

</body>

